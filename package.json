{
  "name": "frippz",
  "author": "Fredrik Frodlund <fredrik@frodlund.se> (https://frippz.se)",
  "license": "ISC",
  "version": "1.6.3-build3",
  "description": "My quaint little blog",
  "keywords": [
    "blog",
    "jekyll",
    "html5",
    "css",
    "web"
  ],
  "homepage": "https://github.com/frippz/frippz.se",
  "bugs": "https://github.com/frippz/frippz.se/issues",
  "main": "index.html",
  "repository": {
    "type": "git",
    "url": "git@github.com:frippz/frippz.se.git"
  },
  "directories": {
    "src": "src/"
  },
  "engines": {
    "node": ">=6.11.1",
    "yarn": "^1.0.0"
  },
  "scripts": {
    "start": "parallelshell 'yarn run build:watch' 'yarn run jekyll:serve'",
    "prebuild": "touch _includes/sprite.svg & mkdir -p dist",
    "build": "yarn run build:css && yarn run build:js && yarn run build:svg",
    "build:watch": "onchange ./src/** -i -- yarn run build",
    "build:css": "postcss -c postcss.config.js ./src/css/*.css -d dist/css",
    "build:js": "browserify ./src/js/main.js -o ./dist/bundle.js",
    "build:svg": "svg-sprite -C svg-sprite.config.json --dest ./_includes src/svg/*.svg",
    "deploy:css": "postcss -c postcss.config.live.js ./src/css/*.css -d dist/css",
    "postdeploy:css": "foreach -g 'dist/css/*.css' -x 'uglifycss #{path} --output #{path}'",
    "deploy:js": "browserify ./src/js/main.js | uglifyjs | hashmark -l 8 'dist/bundle.{hash}.js'",
    "lint": "yarn run lint:css && yarn run lint:js",
    "lint:css": "stylelint --color -f verbose src/css/**/*.css",
    "lint:js": "eslint src/js/**/*.js",
    "jekyll:serve": "sleep 1; jekyll serve --incremental",
    "test": "yarn run lint",
    "dist:clean": "mkdir -p ./dist && rm -rf ./dist/*",
    "predeploy": "yarn run dist:clean",
    "deploy": "yarn run deploy:css && yarn run deploy:js && yarn run build:svg"
  },
  "devDependencies": {
    "browserify": "^16.1.1",
    "eslint": "^4.5.0",
    "foreach-cli": "^1.8.1",
    "hashmark": "^5.0.0",
    "onchange": "^3.2.1",
    "parallelshell": "^3.0.1",
    "postcss-cli": "^5.0.0",
    "postcss-custom-properties": "^7.0.0",
    "stylelint": "^9.2.0",
    "svg-sprite": "^1.3.7",
    "uglify-es": "^3.0.28",
    "uglifycss": "^0.0.29",
    "yarn": "^1.5.1"
  }
}
